<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.g34.quicksalon.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServiceProviderList</servlet-name>
        <servlet-class>com.g34.quicksalon.controller.serviceProvider.ServiceProviderListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServiceProviderList</servlet-name>
        <url-pattern>/serviceProvider/enqueue_customer.jsp/serviceProviderList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServiceListServlet</servlet-name>
        <servlet-class>com.g34.quicksalon.controller.serviceProvider.ServiceListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServiceListServlet</servlet-name>
        <url-pattern>/serviceProvider/enqueue_customer.jsp/serviceList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AppointmentsServlet</servlet-name>
        <servlet-class>com.g34.quicksalon.controller.AppointmentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppointmentsServlet</servlet-name>
        <url-pattern>/serviceProvider/enqueue_customer.jsp/appointments</url-pattern>
    </servlet-mapping>

</web-app>