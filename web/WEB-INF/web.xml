<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.g34.quicksalon.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServiceProviderList</servlet-name>
        <servlet-class>com.g34.quicksalon.controller.serviceProvider.ServiceProviderListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServiceProviderList</servlet-name>
        <url-pattern>/serviceProvider/serviceProviderList</url-pattern>
    </servlet-mapping>

<!--    ServiceList returns-->
    <servlet>
        <servlet-name>ServiceListServlet</servlet-name>
        <servlet-class>com.g34.quicksalon.controller.ServiceListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServiceListServlet</servlet-name>
        <url-pattern>/serviceList</url-pattern>
    </servlet-mapping>


<!--    //all appointments returns-->
    <servlet>
        <servlet-name>SpAppointmentServlet</servlet-name>
        <servlet-class>com.g34.quicksalon.controller.serviceProvider.SpAppointmentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SpAppointmentServlet</servlet-name>
        <url-pattern>/serviceProvider/spappointments</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AppointmentsServlet</servlet-name>
        <servlet-class>com.g34.quicksalon.controller.AppointmentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppointmentsServlet</servlet-name>
        <url-pattern>/appointments</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>View</servlet-name>
        <servlet-class>com.g34.quicksalon.controller.upperStaff.owner.ViewManagersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>View</servlet-name>
        <url-pattern>/upperStaff/owner/allManagers.html/view</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>addManager</servlet-name>
        <servlet-class>com.g34.quicksalon.controller.upperStaff.owner.AddManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addManager</servlet-name>
        <url-pattern>/upperStaff/owner/registerManager.html/addManager</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>RegisterCustomerServlet</servlet-name>
        <servlet-class>com.g34.quicksalon.controller.RegisterCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterCustomerServlet</servlet-name>
        <url-pattern>/registercustomer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PersonalScheduleServlet</servlet-name>
        <servlet-class>com.g34.quicksalon.controller.serviceProvider.PersonalScheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PersonalScheduleServlet</servlet-name>
        <url-pattern>/serviceProvider/myschedule</url-pattern>
    </servlet-mapping>

</web-app>